{
  "name": "semantic-release-plugin-decorators",
  "version": "4.0.4",
  "type": "module",
  "main": "src/index.js",
  "repository": "git@github.com:mjsorribas/semantic-release-plugin-decorators.git",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts,.cjs .",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier \"**/*.{ts,js,jsx,css,json}\"",
    "prettier:fix": "prettier \"**/*.{ts,js,jsx,css,json,cjs}\" --write",
    "format": "npm run prettier -- --write",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "license": "MIT",
  "peerDependencies": {
    "semantic-release": "20.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.0.0",
    "jest": "^28.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn format"
    ]
  }
}
